version: 1.5.0
variant: fcos
storage:
  filesystems:
    - path: /appdata
      device: /dev/sdb
      format: ext4
      wipe_filesystem: false
  directories:
    - path: /appdata/media
      mode: 0755
    - path: /appdata/media/movies
      mode: 0755
    - path: /appdata/wastebin
      mode: 0755
    - path: /appdata/magicmirror
      mode: 0755
    - path: /appdata/data
      mode: 0755
  files:
    - path: /etc/systemd/network/00-ens3.network
      mode: 0644
      contents:
        inline: |
          [Match]
          Name=ens3

          [Network]
          Address=192.168.50.94/24
          Gateway=192.168.50.1
          DNS=192.168.50.1
passwd:
  users:
    - name: scapista
      password_hash: "$y$j9T$CJkxODHkqctH0aZIC3E2u0$dWdspynhAHyxdD9h2BB5nyw1jhOklwYjPxZxjNqAgmD"
      ssh_authorized_keys:
        - ssh-rsa 
      groups:
        - sudo
      home_dir: /home/scapista
systemd:
  units:
    - name: jellyfin.service
      enabled: true
      contents: |
        [Unit]
        Description=Jellyfin Media Server
        After=network-online.target

        [Service]
        ExecStart=/usr/bin/podman run --name jellyfin -d -p 8096:8096 -v /appdata/media:/media jellyfin/jellyfin
        Restart=always

        [Install]
        WantedBy=multi-user.target
    - name: magicmirror.service
      enabled: true
      contents: |
        [Unit]
        Description=MagicMirror
        After=network-online.target

        [Service]
        ExecStart=/usr/bin/podman run --name magicmirror -d -p 8080:8080 -v /appdata/magicmirror:/magicmirror bastilimbach/docker-magicmirror
        Restart=always

        [Install]
        WantedBy=multi-user.target
    - name: wastebin.service
      enabled: true
      contents: |
        [Unit]
        Description=Wastebin
        After=network-online.target

        [Service]
        ExecStart=/usr/bin/podman run --name wastebin -d -p 8000:8000 -v /appdata/wastebin:/wastebin matze/wastebin
        Restart=always

        [Install]
        WantedBy=multi-user.target
